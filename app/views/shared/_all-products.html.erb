        <article class="work-item brand">
          <div class="work-wrapper">
            <%= cl_image_tag product.picture %>
            <div class="work-overlay">
              <div class="work-caption">
                <h6 class="work-title"><%= product.name + " | " + product.price.to_s + ' â‚¬'%> </h6>
                <span class="work-category"><%= product.description%></span>

                  <%= form_for([@profile, @order], url: new_profile_order_path(@profile, @order, product.id),method: :get) do |f| %>

                    <div class="form-group">
                      <button class="btn btn-block btn-round btn-dark">Buy</button>
                    </div>
                  <% end %>

              </div>
            </div>
              <!-- HERE A LINK TO THE PRODUCT PAGE IF NEEDED -->
          </div>
        </article>
      <% end %>
    </div>
  </div>
</section>
