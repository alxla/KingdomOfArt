  <!-- PRELOADER -->
  <div class="page-loader">
    <div class="loader">Loading...</div>
  </div>
  <!-- END PRELOADER -->

<div class="wrapper">

  <!-- PAGE TITLE -->
  <section class="module-sm bg-white-dark">
    <div class="container">

      <div class="row">
        <div class="col-sm-12 text-center">

          <h3 class="montserrat text-uppercase m-b-10">Create your new profile</h3>

        </div>
      </div>

    </div>
  </section>
  <!-- END PAGE TITLE -->

  <!-- LOGIN -->
  <section class="module">
    <div class="container">

      <div class="row">
        <div class="col-sm-8 col-sm-offset-2">

          <h4 class="text-center m-b-30">Create your new profile</h4>

          <%= form_for(@profile, url: profiles_path(@profile)) do |f| %>

            <div class="col-md-6 form-group">
              <%= f.label 'First name' %>
              <%= f.text_field :firstname, autofocus: true, :placeholder => "Michel", :class => "form-control input-lg" %>
            </div>

            <div class="col-md-6 form-group">
              <%= f.label 'Last name' %>
              <%= f.text_field :lastname, autofocus: true, :placeholder => "Dupont", :class => "form-control input-lg" %>
            </div>

            <div class="col-md-6 form-group">
              <%= f.label 'Birth date' %>
              <%= f.datetime_field :birth_date, autofocus: true, :placeholder => @profile.biography, :class => "form-control input-lg" %>
            </div>

            <div class="col-md-12 form-group">
              <label>Your Picture</label>
              <%= image_tag(@profile.picture) if @profile.picture? %>
              <%= f.file_field :picture, :class => "btn btn-block btn-round btn-base" %>
              <%= f.hidden_field :picture_cache %>
            </div>

            <div class="col-md-12 form-group">
              <%= f.label 'Address' %>
              <%= f.text_field :address, autofocus: true, :placeholder => @profile.address, :class => "form-control input-lg" %>
            </div>

            <div class="col-md-6 form-group">
              <%= f.label 'City' %>
              <%= f.text_field :city, autofocus: true, :placeholder => @profile.city, :class => "form-control input-lg" %>
            </div>

            <div class="col-md-6 form-group">
              <%= f.label 'Country' %>
              <%= f.text_field :country, autofocus: true, :placeholder => @profile.country, :class => "form-control input-lg" %>
            </div>

            <div class="col-md-6 form-group">
              <%= f.label 'Artiste? Check the box' %>
              <div >
              <%= f.radio_button :profile_type, "artist", :value => true, :class => "form-control input-lg" , :id => "hugo"%>
              </div>
            </div>

            <div id="p">
            </div>

            <div class="form-group">
              <button class="btn btn-block btn-round btn-base">Cr√©er</button>
            </div>
          <% end %>

        </div>
      </div><!-- .row -->

    </div>
  </section>
  <!-- END LOGIN -->
</div>
