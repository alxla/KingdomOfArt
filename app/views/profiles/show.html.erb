<!-- WRAPPER -->
<div class="wrapper">

<% if @profile.profile_type == 'artist' %>

  <!-- HERO -->
  <section id="hero" class="module-hero bg-black-alfa-40 color-white parallax" data-background=<%= @profile.universe_picture %> >

    <!-- HERO TEXT -->
    <div class="hero-caption">
      <div class="hero-text">

        <div class="container">

          <div class="row">
            <div class="col-sm-12 text-center">
              <h1 class="text-uppercase text-xl montserrat m-b-15"><%= @profile.universe_name %></h1>

            </div>
          </div>
        </div>

      </div>
    </div>
    <!-- END HERO TEXT -->
  </section>
  <!-- END HERO -->
<% end %>

  <!-- TEAM -->
  <section class="module">
    <div class="container">
    <h3 class="team-name"><%= @profile.firstname.capitalize + " " + @profile.lastname.capitalize %> </h3>
    <span class="team-role"><%= @profile.city.capitalize + " " + @profile.country %></span>
    <span class="team-role"><%=  %></span>
      <div class="row">
        <!-- ARTIST -->
        <div class="col-sm-6 col-md-3">
          <div class="team-item m-b-sm-35">
            <div class="team-photo">
              <%= cl_image_tag @profile.picture %>
              <div class="team-social">
                <div>
                  <div>
                    <a href="#"><i class="fa fa-facebook"></i></a>
                    <a href="#"><i class="fa fa-twitter"></i></a>
                    <a href="#"><i class="fa fa-dribbble"></i></a>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
        <!-- END ARTIST -->

        <% if @profile.profile_type == 'artist' %>

        <!-- BIOGRAPHY -->
        <div class="col-sm-6 col-md-9">
          <div class="col-sm-9 page-content">
            <h1>About me</h1>
            <p><%= @profile.biography %></p>
          </div>
        </div>
        <!-- END BIOGRAPHY -->

        <% end %>

      </div>
      <a href="/#universes" class="btn btn-sm btn-circle btn-dark">Discover more</a>
    </div><!-- .row -->
  </section>

</div>

<%= render "shared/all-products" %>
